    <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplay354"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Order Entry Form"
            singleContainerFullSize="false"
	    >
            <f:content>
                <Label text="Order ID" />
                <Input id="id-order" type="Number" value="{orderDetailModel>/OrderID}" />
                <Label text="Customer" />
                <Input id="id-name" value="{orderDetailModel>/CustomerName}" />
                <Label text="Product" />
                <Input id="id-product" value="{orderDetailModel>/ProductName}" />
                <Label text="Quantity" />
                <Input id="id-quantity" type="Number" value="{orderDetailModel>/Quantity}" />
            </f:content>
            
	    </f:SimpleForm>
    </VBox>
    <HBox class="hbox-button">
		<Button text="Submit"
				press="onPress"
				class="sapUiSmallMarginBottom"
		>
		</Button>
	</HBox>
    
    <Table
		items="{
			path: 'orderDetailModel>/orderDetails',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Order Summary" level="H2"/>
				<ToolbarSpacer/>
				<CheckBox text="Fixed Layout" selected="true" select="onCheckBoxSelect"/>
				<Button text="Open Dialog" press="onOpenPressed"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Order ID" />
			</Column>
			<Column>
				<Text text="Customer" />
			</Column>
			<Column>
				<Text text="Product" />
			</Column>
            <Column>
				<Text text="Quantity" />
			</Column>

		</columns>
		<items>
			<ColumnListItem vAlign="Middle" type="Navigation">
				<cells>
					<Text text="{orderDetailModel>OrderID}" wrapping="false" />
					<Text text="{orderDetailModel>CustomerName}" wrapping="false"/>
					<Text text="{orderDetailModel>ProductName}" />
                    <Text text="{orderDetailModel>Quantity}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>

    </Page>
</mvc:View>