<mvc:View
	height="100%"
	controllerName="sample.project1.controller.Odata"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdct="sap.ui.mdc.table"
	xmlns:core="sap.ui.core"
>
	<Page
		id="Odata-page"
		title="{i18n_demo>odataproduct}"
		showHeader="true" >

        <customHeader>
				<OverflowToolbar>
					<Button icon="sap-icon://nav-back" tooltip="{i18n_demo>navButtonTooltipText}" press="onNavBack"/>
					<Button icon="sap-icon://menu2" press="onToggleSideNav" />
					<Title text="{i18n_demo>productDetailsText}" level="H1" />
					<ToolbarSpacer />
					<Button icon="sap-icon://search"/>
					<Button icon="sap-icon://bell"/>
					<Button class="theme-button" text="{i18n_demo>themeText}" press="onOpenThemeMenu" />
					<Avatar initials="SM" displaySize="XS" />
				</OverflowToolbar>
		</customHeader>

        
        <Table items="{/Products}"
               itemPress="onItemPress"
               width="95%"
               class="sapUiMediumMarginBegin sapUiLargeMarginTop"
         >
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="{i18n_demo>products}" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="{i18n_demo>createText}" press="onPressCreate"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column><Text text="{i18n_demo>id}"/></Column>
                <Column><Text text="{i18n_demo>name}"/></Column>
                <Column><Text text="{i18n_demo>desc}"/></Column>
                <Column><Text text="{i18n_demo>price}"/></Column>
            </columns>

            <items>
                <ColumnListItem type="Active">
                <cells>
                    <Text text="{ID}"/>
                    <Text text="{Name}"/>
                    <Text text="{Description}"/>
                    <Text text="{Price}"/>
                </cells>
                </ColumnListItem>
            </items>
        </Table>
        
	</Page>
</mvc:View>