<mvc:View
	height="100%"
	controllerName="sample.project1.controller.View3"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:about="Blocks.About"
>
	<ObjectPageLayout id="ObjectPageLayout"
		enableLazyLoading="true"
		beforeNavigate="onBeforeNavigate"
		useIconTabBar="true"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Soumyadeep Mallick" wrapping="true"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Avatar src="images/linked-profile.jpeg" class="sapUiTinyMarginEnd"/>
						<m:Title text="Soumyadeep Mallick" wrapping="true" />
					</m:FlexBox>
				</snappedHeading>

				<expandedContent>
					<m:Text text="DevOps"/>
				</expandedContent>

				<actions>
					<m:Button class="theme-button" text="Theme" type="Transparent" press="onOpenThemeMenu" />
					<m:Avatar initials="SN" displaySize="XS" />
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" >
				<m:Avatar class="sapUiSmallMarginEnd" src="images/linked-profile.jpeg" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Link text="+91 9876543210"/>
					<m:Link text="xyz@mav.edu.in"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Memari, West Bengal, India"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>


		<sections>
			<ObjectPageSection titleUppercase="false" id="goals" title="About Me">
				<subSections>
				<ObjectPageSubSection id="goalsSS1" titleUppercase="false">
					<blocks>
						<about:AboutBlock id="AboutBlock"/>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
			</ObjectPageSection>
		</sections>


		<!-- <Text id="welcomeText" text="Welcome! User" /> -->
		
	</ObjectPageLayout>
</mvc:View>