<mvc:View
	height="100%"
	controllerName="sample.project1.controller.View3"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:about="sample.project1.Blocks.About"
	xmlns:course="sample.project1.Blocks.Course"
	xmlns:skill="sample.project1.Blocks.Skill"
>
	<ObjectPageLayout id="ObjectPageLayout"
		enableLazyLoading="true"
		beforeNavigate="onBeforeNavigate"
		useIconTabBar="true"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title id="welcomeText" text="" wrapping="true"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Avatar src="images/sample-avatar-image.jpg" class="sapUiTinyMarginEnd"/>
						<m:Title id="Username" text="" wrapping="true" />
					</m:FlexBox>
				</snappedHeading>

				<expandedContent>
					<m:Text text="DevOps"/>
				</expandedContent>

				<actions>
					<m:Button class="theme-button" text="Theme" type="Transparent" press="onOpenThemeMenu" />
					<m:Avatar initials="SM" displaySize="XS" />
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" >
				<m:Avatar class="sapUiSmallMarginEnd" src="images/linked-profile.jpeg" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Link text="+91 9876543210"/>
					<m:Link text="xyz@mav.edu.in"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Memari, West Bengal, India"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>


		<sections>
			<ObjectPageSection titleUppercase="false" id="goals" title="About Me">
				<subSections>
				<ObjectPageSubSection id="about" titleUppercase="false">
					<blocks>
						<about:AboutBlock id="AboutBlock"/>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" id="coursework" title="Coursework">
				<subSections>
					<ObjectPageSubSection id="courses" titleUppercase="false">
						<blocks>
							<course:CourseBlock id="CourseBlock"/>
						</blocks>
					</ObjectPageSubSection>

				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" id="skill" title="Skills">
				<subSections>
					<ObjectPageSubSection id="Technical" title="Technical Skill" titleUppercase="false">
						<blocks>
							<skill:TechnicalSkill id="TechnicalSkill"/>
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection id="Soft" title="Soft Skill" titleUppercase="false">
						<blocks>
							<skill:SoftSkill id="SoftSkill"/>
						</blocks>
					</ObjectPageSubSection>

					
				</subSections>
			</ObjectPageSection>

		</sections>
		
	</ObjectPageLayout>
</mvc:View>