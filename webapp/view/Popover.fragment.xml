<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">

	<ResponsivePopover
		id="respPopover"
		placement="Bottom"
		verticalScrolling="false"
		ariaLabelledBy="sn-label">

		<core:InvisibleText id="sn-label" text="Main navigation"/>

		<tnt:SideNavigation id="sideNav" width="17rem" itemSelect=".onItemSelect" selectedKey="home" design="Plain">
			<tnt:NavigationList>
				<tnt:NavigationListItem text="Home" icon="sap-icon://home" key="home"/>
				<tnt:NavigationListItem text="User" icon="sap-icon://SAP-icons-TNT/user" key="user"/>
				<tnt:NavigationListItem text="Welcome" icon="sap-icon://business-card" key="welcome"/>
				<tnt:NavigationListItem text="Employee" icon="sap-icon://employee-lookup" key="employee"/>
				<tnt:NavigationListItem text="Odata" icon="sap-icon://product" key="odata"/>
			</tnt:NavigationList>

	
		</tnt:SideNavigation>
	</ResponsivePopover>
</core:FragmentDefinition>