<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Select Department"
		search=".onSearch"
		confirm="onDepartmentConfirm"
		cancel="onDepartmentCancel"
		items="{employeeDetailModel>/DepartmentList}">
		<StandardListItem
			title="{employeeDetailModel>text}"
			description="{employeeDetailModel>key}"
			 />
	</SelectDialog>
</core:FragmentDefinition>