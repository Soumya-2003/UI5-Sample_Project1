<core:FragmentDefinition 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    >
    <Dialog title="Create New Product" contentWidth="800px" afterClose="onAfterCloseDialog">
        
        <form:SimpleForm
            layout="ResponsiveGridLayout"
            editable="true"
            columnsL="2"
            columnsXL="2">
            <form:content>
            <core:Title text="Product Details" />
            <Label required="true" text="Product ID" />
            <Input
                id="idProductID"
                value="{productModel>/productID}"
                valueLiveUpdate="true"
                />
            <Label required="true" text="Product Name" />
            <Input
                id="idProductName"
                value="{productModel>/productName}"
                valueLiveUpdate="true"
                />

            <Label required="true" text="Product Description" />
            <Input
                id="idProductDesc"
                value="{productModel>/productDesc}"
                valueLiveUpdate="true"
                />
            
            <Label required="true" text="Price" />
            <Input
                id="idPrice"
                type="Number"
                value="{productModel>/productPrice}"
                valueLiveUpdate="true"
                />
            
            </form:content>
        </form:SimpleForm>
        
        <beginButton>
            <Button type="Emphasized" text="Create" press="addProductOnTable" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onPressCancelNewProduct" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>