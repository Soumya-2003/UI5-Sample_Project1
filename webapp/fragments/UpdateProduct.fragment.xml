<core:FragmentDefinition 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    >
    <Dialog contentWidth="800px" afterClose="onAfterCloseDialog">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Title text="Edit Product"/>
                </contentLeft>

                <contentRight>
                    <Button text="Delete"
                            icon="sap-icon://delete"
                            type="Reject"
                            press="onPressDeleteProduct"/>
                </contentRight>
            </Bar>
        </customHeader>

        
        <form:SimpleForm
            layout="ResponsiveGridLayout"
            editable="true"
            columnsL="2"
            columnsXL="2">
            <form:content>
            <core:Title text="Product Details" />
            <Label required="true" text="Product ID" />
            <Input
                id="idUpdateProductID"
                value="{productModel>/productID}"
                valueLiveUpdate="true"
                enabled="false"
                />

            <Label text="Product Name" />
            <Input
                id="idUpdateProductName"
                maxLength="40"
                value="{productModel>/productName}"
                valueLiveUpdate="true" />

            <Label required="true" text="Product Description" />
            <Input
                id="idUpdateProductDesc"
                value="{productModel>/productDesc}"
                valueLiveUpdate="true"
                />

            <Label text="Price" />
            <Input
                id="idUpdatePrice"
                type="Number"
                value="{productModel>/productPrice}"
                valueLiveUpdate="true"/>
            
            </form:content>
        </form:SimpleForm>
        <beginButton>
        <Button type="Emphasized" text="Update" press="onPressUpdateProduct" />
        
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onPressCancelEditProduct" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>