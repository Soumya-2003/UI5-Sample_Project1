<core:FragmentDefinition 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    >
    <Dialog contentWidth="600px" afterClose="onAfterCloseDialog">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Title text="{i18n_demo>editProductText}"/>
                </contentLeft>

                <contentRight>
                    <Button text="{i18n_demo>deleteText}"
                            icon="sap-icon://delete"
                            type="Reject"
                            press="onPressDeleteProduct"/>
                </contentRight>
            </Bar>
        </customHeader>

        
        <form:SimpleForm
            layout="ResponsiveGridLayout"
            editable="true"
            columnsL="2"
            columnsXL="2">
            <form:content>
            <core:Title text="{i18n_demo>productDetailsText}" />
            <Label required="true" text="{i18n_demo>productIDText}" />
            <Input
                id="idUpdateProductID"
                value="{productModel>/productID}"
                valueLiveUpdate="true"
                enabled="false"
                />

            <Label text="{i18n_demo>productNameText}" />
            <Input
                id="idUpdateProductName"
                maxLength="40"
                value="{productModel>/productName}"
                valueLiveUpdate="true" />

            <Label required="true" text="{i18n_demo>desc}" />
            <Input
                id="idUpdateProductDesc"
                value="{productModel>/productDesc}"
                valueLiveUpdate="true"
                />

            <Label text="{i18n_demo>price}" />
            <Input
                id="idUpdatePrice"
                type="Number"
                value="{productModel>/productPrice}"
                valueLiveUpdate="true"/>
            
            </form:content>
        </form:SimpleForm>
        <beginButton>
        <Button type="Emphasized" text="{i18n_demo>update}" icon="sap-icon://edit" press="onPressUpdateProduct" />
        
        </beginButton>
        <endButton>
            <Button text="{i18n_demo>cancel}" icon="sap-icon://cancel" press="onCancelUpdate" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>